
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library_Management_system</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/users/Navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/users/Contact.css" asp-append-version="true" />


    
</head>
<body>
    <header id="main-header">
        
        <div class="top-header">
            <div class="top-header-content">
                <div class="logo-section">
                    
                    <img src="/images/logo.png" class="navbar-logo"/>
                </div>
                <div class="user-info">
                    <a href="mailto:aub168@gmail.com" class="email-address">
                        <i class="bi bi-envelope"></i>
                        aub168@gmail.com
                    </a>
                    <span href="/Profile">
                        <a href="/Profile">
                        <i class="bi bi-person"></i>
                        Choun Theachumnith</a>
                    </span>
                </div>
            </div>
        </div>

    
        <nav class="main-navbar">
            <div class="main-navbar-content">

                <button class="mobile-menu-toggle" aria-label="Toggle navigation">
                    <i class="bi bi-list"></i>
                </button>

                <ul class="nav-links">
                    <li><a href="/">Home</a></li>
                    <li><a href="/Event">Event</a></li>
                    <li><a href="/Contact">Contact</a></li>
                    <li><a href="/About">About Library</a></li>
                </ul>

                <div class="nav-right">
                    <div class="search-box">
                        <i class="bi bi-search"></i>
                        <input type="text" placeholder="Search" />
                    </div>

                    <a href="/BookMark" class="book-mark-text">Book Mark</a>

                    <div class="icon-buttons">
                        <a class="icon-btn" title="Shopping Cart" href="/Cart">
                            <svg viewBox="0 0 24 24">
                                <circle cx="9" cy="21" r="1"></circle>
                                <circle cx="20" cy="21" r="1"></circle>
                                <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                            </svg>
                            <span class="badge">2</span>
                        </a>

                        <a class="icon-btn" title="Notifications" href="/Notification">
                            <svg viewBox="0 0 24 24">
                                <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
                                <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
                            </svg>
                            <span class="badge">3</span>
                        </a>

                        <a class="icon-btn" title="History" href="/History">
                            <svg viewBox="0 0 24 24">
                                <circle cx="12" cy="12" r="10"></circle>
                                <polyline points="12 6 12 12 16 14"></polyline>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
  

    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-left">
                    <img src="/images/logo.png" />
                    <p>The library preserves knowledge and makes it available to future generations — knowledge never dies here.</p>
                </div>
                <div class="footer-right">
                    <div class="footer-links">
                        <h3>About Library</h3>
                        <a href="/About/Faq">FAQ</a>
                        <a href="/About/Support">Support</a>
                        <a href="/About">Policies</a>
                        <a asp-controller="Login" asp-action="Index" >Account & Login</a>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <p class="copyright">&copy; 2025 ACLEDA University of Business's Library. All right reserved</p>
                <div class="footer-bottom-links">
                    <a href="/Terms">Terms of service</a>
                    <a href="/Privacy">Privacy Policy</a>
                    <a href="/Cookie">Cookie Setting</a>
                </div>
            </div>
        </div>
    </footer>
 

 

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/users/navbar.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>