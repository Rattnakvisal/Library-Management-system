@using Microsoft.AspNetCore.Mvc.Rendering

@functions {
    string IsActive(string controller)
    {
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        return string.Equals(currentController, controller, StringComparison.OrdinalIgnoreCase)
            ? "active"
            : "";
    }
}
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library Management System</title>
    <!-- Bootstrap CSS (Local) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/admin/AdminLayout.css">
    @RenderSection("Styles", required: false)
    
</head>

<body>

    <!-- HEADER -->
    <header class="header d-flex justify-content-between align-items-center px-4">
        <div class="logo">
            <img src="~/images/Admin/logo.png" alt="Logo">
            <h1 class="libraryName fw-semibold">Library Management System</h1>
        </div>

        <div class="information d-flex align-items-center gap-3">
            <i class="bi bi-bell-fill"></i>
            <i class="bi bi-person-circle ml-3" data-bs-toggle="dropdown" aria-expanded="false"></i>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="#">
                    <i class="bi bi-arrow-counterclockwise"></i>
                    <span>Forget Password</span>
                </a>
                <a class="dropdown-item" href="#">
                    <i class="bi bi-box-arrow-right"></i>
                    <span>Logout</span>
                </a>
            </div>
            <div class="ml-3">
                <span class="d-block fw-semibold" style="color: black;">Pros Smos</span>
                @* <span class="text-muted">Admin</span> *@
            </div>
        </div>
    </header>

    <!-- CONTENT -->
    <div class="content d-flex">
        <!-- SIDEBAR -->
        <nav class="sidebar">
            <ul class="menu-link">
                <li class="link @IsActive("Dashboard")">
                    <i class="bi bi-speedometer2"></i>
                    <a asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                </li>
                <li class="link @IsActive("ManageBooks")">
                    <i class="bi bi-book"></i>
                    <a asp-controller="ManageBooks" asp-action="Index">Manage Books</a>
                </li>
                <li class="link @IsActive("ManageBorrowingBook")">
                    <i class="bi bi-journals"></i>
                    <a asp-controller="ManageBorrowingBook" asp-action="Index">Borrowing Book</a>
                </li>

                <li class="link @IsActive("ManageUser")">
                    <i class="bi bi-people"></i>
                    <a asp-controller="ManageUser" asp-action="Index" class="fw-semibold">Manage User</a>
                </li>
                <li class="link @IsActive("ManageEvent")">
                    <i class="bi bi-calendar-event"></i>
                    <a asp-controller="ManageEvent" asp-action="Index" class="fw-semibold">Event</a>
                </li>
                <li class="link @IsActive("ManageFeedback")">
                    <i class="bi bi-envelope-exclamation"></i>
                    <a asp-controller="ManageFeedback" asp-action="Index" class="fw-semibold">Feedbacks</a>
                </li>
                <li class="link @IsActive("ManageReport")">
                    <i class="bi bi-receipt"></i>
                    <a asp-controller="ManageReport" asp-action="Index" class="fw-semibold">Report</a>
                </li>
            </ul>
        </nav>

        <!-- MAIN -->
        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <!-- jQuery (Local) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    
    <!-- Bootstrap Bundle JS (Local) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- SweetAlert2 (CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
