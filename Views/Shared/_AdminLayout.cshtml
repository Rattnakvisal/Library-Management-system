@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.AspNetCore.Identity
@using Library_Management_system.Models
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@functions {
    string IsActive(string controller)
    {
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        return string.Equals(currentController, controller, StringComparison.OrdinalIgnoreCase) ? "active" : "";
    }
}

@{
    bool isAdmin = User.IsInRole("Admin");
    bool isLibrarian = User.IsInRole("Librarian");
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin | Library Management System</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/admin/AdminLayout.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>

<body>

    <header class="header d-flex justify-content-between align-items-center px-4 shadow-sm">
        <div class="d-flex align-items-center gap-2">
            <img src="~/images/Admin/logo.png" alt="Logo" height="36" />
            <h1 class="libraryName fw-semibold mb-0 fs-5">Library Management System</h1>
        </div>

        @if (SignInManager.IsSignedIn(User))
        {
            var u = await UserManager.GetUserAsync(User);
            var name = u?.FullName ?? u?.UserName ?? "Admin";
            var roleText = isAdmin ? "Admin" : (isLibrarian ? "Librarian" : "Staff");

            <div class="dropdown">
                <button class="btn d-flex align-items-center gap-2 text-black" type="button" data-bs-toggle="dropdown"
                        aria-expanded="false">
                    <i class="bi bi-person-circle fs-4"></i>
                    <div class="text-start">
                        <div class="fw-semibold">@name</div>
                        <small class="text-black-50">@roleText</small>
                    </div>
                </button>

                <ul class="dropdown-menu dropdown-menu-end shadow">
                    <li>
                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">
                            <i class="bi bi-key me-2"></i> Change Password
                        </a>
                    </li>
                    <li>
                        <hr class="dropdown-divider" />
                    </li>
                    <li>
                        <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="px-3">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-box-arrow-right me-2"></i> Logout
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        }
    </header>

    <div class="content d-flex">

        <!-- SIDEBAR -->
        <nav class="sidebar">
            <ul class="menu-link">

                @* Dashboard: Admin + Librarian *@
                @if (isAdmin || isLibrarian)
                {
                    <li class="link @IsActive("Dashboard")">
                        <i class="bi bi-speedometer2"></i>
                        <a asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                    </li>
                }

                <li class="link @IsActive("ManageBooks")">
                    <i class="bi bi-book"></i>
                    <a asp-controller="ManageBooks" asp-action="Index">Manage Books</a>
                </li>

                <li class="link @IsActive("ManageBorrowingBook")">
                    <i class="bi bi-journals"></i>
                    <a asp-controller="ManageBorrowingBook" asp-action="Index">Borrowing Book</a>
                </li>

                @* Manage User: Admin only *@
                @if (isAdmin)
                {
                    <li class="link @IsActive("ManageUser")">
                        <i class="bi bi-people"></i>
                        <a asp-controller="ManageUser" asp-action="Index">Manage User</a>
                    </li>
                }

                <li class="link @IsActive("ManageEvent")">
                    <i class="bi bi-calendar-event"></i>
                    <a asp-controller="ManageEvent" asp-action="Index">Event</a>
                </li>

                <li class="link @IsActive("ManageFeedback")">
                    <i class="bi bi-envelope-exclamation"></i>
                    <a asp-controller="ManageFeedback" asp-action="Index">Feedbacks</a>
                </li>

                @* Report: Admin only (close for Librarian) *@
                @if (isAdmin)
                {
                    <li class="link @IsActive("ManageReport")">
                        <i class="bi bi-receipt"></i>
                        <a asp-controller="ManageReport" asp-action="Index">Report</a>
                    </li>
                }
            </ul>
        </nav>

        <!-- MAIN -->
        <main class="main-content">
            @RenderBody()
        </main>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>