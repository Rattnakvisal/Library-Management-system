@{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>ACLEDA University Library</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
        <link rel="stylesheet" href="~/css/Login/login.css" />
    </head>
    <body>
        <div class="container">
            <div class="card">

                <!-- Left Section -->
                <div class="left">
                    <div class="logo">
                        <img src="~/images/Login/logo.png" alt="ACLEDA Logo" />
                    </div>

                    <div class="illustration">
                        <img src="~/images/Login/bookicon.png" alt="Books Illustration" />
                    </div>
                </div>

                <!-- Right Section -->
                <div class="right">
                    <h2>ACLEDA UNIVERSITY LIBRARY</h2>

                    <button class="btn-login-student">
                        <img class="logoac" src="~/images/Login/logoac.png" alt="Student Icon" />
                        Login with Student Credentials
                    </button>

                    <div class="divider">
                        <span>OR</span>
                    </div>

                    <form>
                        <div>
                            <div class="input-group">
                                <div class="icon-email">
                                    <i class="fa-regular fa-envelope"></i>
                                </div>

                                <input type="email" placeholder="Your Email" required />
                            </div>
                            <div class="input-group">
                                <div class="icon-password">
                                    <i class="fa-solid fa-lock"></i>
                                </div>
                                <input type="password" class="password" placeholder="Your Password" required />
                                <span class="toggle-password">
                                    <i class="bi bi-eye-slash" id="togglePassword"></i>
                                </span>

                            </div>
                        </div>

                        <button type="submit" class="btn-signin">Sign in</button>
                    </form>

                    <div class="links">
                        <div class="forgot">
                            <a href="#">Forgot password?</a>
                        </div>

                        <p>
                            Don’t have an account?
                            <a class="Sign-up-telegram" href="#">Sign up via Telegram <i class="fab fa-telegram"></i> </a>
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </body>
    <script src="~/js/admin/login.js"></script>
    </html>
}