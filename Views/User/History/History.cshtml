@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "History";
}
<!-- PAGE -->
<main class="page-bg">
    <div class="container page-wrap">

        <!-- Header row -->
        <div class="d-flex align-items-center justify-content-between gap-3 mt-4 mb-3">
            <h3 class="page-title mb-0">History</h3>
            @* <button class="btn btn-primary btn-sm px-3 summary-btn">
                Borrowing Summary
            </button> *@
            <div class="summary-dropdown">
                <button class="btn btn-primary borrowing-btn" id="toggleSummary">
                    Borrowing Summary
                </button>

                <div class="summary-card shadow" id="summaryDetails">
                    <div class="summary-row">
                        <span>Sub total</span>
                        <span class="fw-bold">10</span>
                    </div>
                    <div class="summary-row">
                        <span>On hold</span>
                        <span class="fw-bold">10</span>
                    </div>
                    <div class="summary-row">
                        <span>Return</span>
                        <span class="fw-bold">8</span>
                    </div>

                    <hr class="summary-divider">

                    <div class="summary-row mb-4">
                        <span class="small">Damage & Late returning fee:</span>
                        <span class="fw-bold">$1.50</span>
                    </div>

                    <button class="btn btn-light w-100 fw-bold mb-2 py-2" style="color: #1e293b;">
                        Read Term and Condition
                    </button>

                    <div class="text-center">
                        <small class="gold-text">*Term and Condition Applied</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- LIST -->
        <div class="history-list">

            <!-- Item 1 -->
            <article class="history-card shadow-sm">
                <div class="row g-0 align-items-center">
                    <div class="col-auto">
                        <div class="thumb">
                            <img src="images/User/Book/finance.jpg" alt="Book cover">
                        </div>
                    </div>

                    <div class="col">
                        <div class="px-3 py-3">
                            <h5 class="book-name mb-1">Financial Statement Analysis</h5>
                            <div class="small text-muted2">Author: Jame Bonds</div>
                            <div class="small text-muted2">Publish Year: 2023</div>
                            <div class="small text-muted2">Book Code: A168168</div>

                            <div class="stars mt-2">
                                <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i><i class="bi bi-star"></i>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="status-box px-3 py-3">
                            <div class="small">
                                <span class="label">Status:</span>
                                <span class="status borrowing">Borrowing</span>
                            </div>
                            <div class="small text-muted2 mt-1">Borrow Date: 11/12/2025</div>
