@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Support";
}

<!DOCTYPE html>
<html>
<head>
    <title>Account & Settings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif;
            background: #1A304B;
            min-height: 100vh;
        }

        .wrapper {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            margin-bottom: 60px;
        }

            .header h1 {
                color: #ffffff;
                font-size: 42px;
                font-weight: 300;
                margin-bottom: 10px;
            }

            .header p {
                color: rgba(255, 255, 255, 0.7);
                font-size: 16px;
            }

        .container {
            display: flex;
            gap: 60px;
            align-items: flex-start;
        }

        .sidebar {
            width: 250px;
            flex-shrink: 0;
            padding-top: 20px;
        }

        .nav-button {
            display: block;
            width: 100%;
            padding: 15px 20px;
            margin-bottom: 10px;
            background: transparent;
            color: #ffffff;
            border: none;
            text-align: left;
            font-size: 20px;
            cursor: pointer;
            border-radius: 5px;
        }

            .nav-button:hover {
                background: rgba(255, 255, 255, 0.1);
            }

            .nav-button.active {
                background: rgba(255, 255, 255, 0.15);
                font-weight: 500;
            }

        .main-content {
            flex: 1;
            color: rgba(255,255,255,0.85);
            font-size: 15px;
            line-height: 1.8;
        }

            .main-content h2 {
                color: #ffffff;
                font-size: 22px;
                font-weight: 500;
                margin: 30px 0 12px;
            }

            .main-content p {
                margin-bottom: 15px;
            }

            .main-content ul {
                margin: 10px 0 20px 20px;
            }

            .main-content li {
                margin-bottom: 8px;
            }

        @@media (max-width: 768px) {
            body {
                padding: 30px 15px;
            }

            .container {
                flex-direction: column;
                gap: 30px;
            }

            .sidebar {
                width: 100%;
            }

            .nav-button {
                font-size: 16px;
            }
        }

        a {
            text-decoration-line: none;
        }
    </style>
</head>

<body>
    <div class="wrapper">

        <div class="header">
            <h1>Account & Settings</h1>
            <p>Manage your library account and access</p>
        </div>

        <div class="container">

            <!-- Sidebar -->
            <aside class="sidebar">
                <a class="nav-button @(ViewContext.HttpContext.Request.Path == "/about/faq" ? "active" : "")"
                   asp-controller="Home" asp-action="AboutFaq">General</a>

                <a class="nav-button @(ViewContext.HttpContext.Request.Path == "/about/account" ? "active" : "")"
                   asp-controller="Home" asp-action="AboutAccount">Account & Login</a>

                <a class="nav-button @(ViewContext.HttpContext.Request.Path == "/about/support" ? "active" : "")"
                   asp-controller="Home" asp-action="AboutSupport">Support</a>

                <a class="nav-button @(ViewContext.HttpContext.Request.Path == "/about/policies" ? "active" : "")"
                   asp-controller="Home" asp-action="AboutPolicies">Libraries Policy</a>

            </aside>

            <!-- Main Content -->
            <main class="main-content">
                <h1>About</h1>

<p>
    This service provides online access to a digital library that includes books,
    documents, and educational resources.
</p>

<p>
    Accounts are created and authenticated through Telegram.
    The platform does not use passwords or traditional login credentials.
    Access is granted using one-time login codes generated by the official Telegram bot.
</p>

<p>
    Each login code is valid for a limited time and can only be used once.
    Authentication is linked to the user’s Telegram account to ensure secure access.
</p>

<h1>Support</h1>

<p>
    If you experience issues with registration, login, or access to library content,
    support is available through the following channels:
</p>

<ul>
    <li>The Support page on the website</li>
    <li>The official Telegram bot</li>
</ul>

<p>
    For security purposes, account-related assistance requires Telegram account verification.
</p>

            </main>

        </div>
    </div>

    <script>
        function navigateTo(section) {
            if (section === 'General') {
                window.location.href = '@Url.Action("Index", "FAQ")';
            } else if (section === 'Support') {
                window.location.href = '@Url.Action("Support", "FAQ")';
            } else if (section === 'Libraries') {
                window.location.href = '@Url.Action("LibrariesPolicy", "FAQ")';
            }
        }
    </script>

</body>
</html>
