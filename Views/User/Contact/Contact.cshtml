@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Contact";
}

<!-- CONTACT PAGE WRAPPER (960px) -->
<div class="contact-wrapper">
    <input type="hidden" id="contact-success-message" value="@TempData["ContactSuccess"]" />
    <input type="hidden" id="contact-error-message" value="@TempData["ContactError"]" />

    <!-- MAP -->
    <div class="contact-map">
        <iframe src="https://www.google.com/maps?q=ACLEDA%20University%20of%20Business&output=embed"
                loading="lazy">
        </iframe>
    </div>

    <!-- CONTACT INFO -->
    <div class="contact-info">

        <h4>Ms. Tang Siveng - Head of AUB Career Center</h4>
        <p><i class="bi bi-telephone"></i> 0886006130</p>
        <p><i class="bi bi-envelope"></i> Acleda@AUB.edu.kh</p>

        <hr />

        <h4>Mr. Ron Namchheav - Manager of Customer Relations & Cooperation Unit</h4>
        <p><i class="bi bi-telephone"></i> 0886006130</p>
        <p><i class="bi bi-envelope"></i> Acleda@AUB.edu.kh</p>

        <hr />

        <h4>ACLEDA University of Business</h4>
        <p>
            <i class="bi bi-geo-alt"></i>
            1397, Phnom Penh - Hanoi Friendship Blvd, Sangkat Khmuoch,
            Khan Saensokh, Phnom Penh
        </p>
        <p><i class="bi bi-envelope"></i> ACLEDA University</p>
        <p><i class="bi bi-telephone"></i> 0886006130</p>

    </div>

    <!-- FEEDBACK FORM -->
    <div class="contact-form">

        <h4>Feedback Form</h4>

        <form asp-controller="Contact" asp-action="SendFeedback" method="post">
            @Html.AntiForgeryToken()

            <div class="form-row">
                <div class="form-col">
                    <label>Email :</label>
                    <input type="email" name="Email" required />
                </div>

                <div class="form-col form-btn">
                    <button type="submit">Submit</button>
                </div>
            </div>

            <div class="form-group">
                <label>Enquiry :</label>
                <textarea name="Message" rows="6" required></textarea>
            </div>

        </form>
    </div>

    <!-- SOCIAL MEDIA -->
    <div class="contact-social">
        <p>CONNECT WITH US ON</p>

        <a href="https://www.facebook.com/ACLEDAUniversity" target="_blank">
            <i class="bi bi-facebook"></i>
        </a>
        <a href="https://t.me/ACLEDAUniversity" target="_blank">
            <i class="bi bi-telegram"></i>
        </a>
        <a href="https://www.instagram.com/acledauniversity" target="_blank">
            <i class="bi bi-instagram"></i>
        </a>
        <a href="https://www.instagram.com/acledauniversity" target="_blank">
            <i class="bi bi-tiktok"></i>
        </a>
    </div>

</div>

@section Scripts {
    <script>
        (function () {
            const success = (document.getElementById('contact-success-message')?.value || '').trim();
            const error = (document.getElementById('contact-error-message')?.value || '').trim();

            if (success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: success,
                    confirmButtonColor: '#264A73'
                });
            } else if (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Action Failed',
                    text: error,
                    confirmButtonColor: '#264A73'
                });
            }
        })();
    </script>
}
