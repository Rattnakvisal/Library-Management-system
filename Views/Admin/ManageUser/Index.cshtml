@model Library_Management_system.Models.Admin.ManageUserPageViewModel
@{
    ViewBag.Title = "Manage Users";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin/ManageUsers.css" asp-append-version="true" />
}

<div class="dashboard-page container-fluid" id="manageUsersPage" data-active-tab="@Model.ActiveTab"
     data-alert-success="@TempData["ManageUserSuccess"]" data-alert-error="@TempData["ManageUserError"]">
    <header class="page-header">
        <h1 class="page-title">User Management</h1>
        <p class="page-subtitle">Manage student and staff accounts, roles, and access.</p>
    </header>

    <section class="card-container">
        <article class="stat-card">
            <div class="icon-box"><i class="bi bi-mortarboard-fill"></i></div>
            <div class="card-content">
                <span class="card-label">Total Students</span>
                <span class="card-value">@Model.TotalStudents</span>
            </div>
        </article>
        <article class="stat-card">
            <div class="icon-box"><i class="bi bi-person-badge-fill"></i></div>
            <div class="card-content">
                <span class="card-label">Total Staff</span>
                <span class="card-value">@Model.TotalStaff</span>
            </div>
        </article>
        <article class="stat-card">
            <div class="icon-box"><i class="bi bi-people-fill"></i></div>
            <div class="card-content">
                <span class="card-label">Total Users</span>
                <span class="card-value">@Model.TotalUsers</span>
            </div>
        </article>
    </section>

    <section class="controls-section">
        <nav class="tabs" aria-label="User types">
            <button type="button" class="tab" id="studentTab" data-tab="students">Students</button>
            <button type="button" class="tab" id="staffTab" data-tab="staffs">Staffs</button>
        </nav>
        <div class="action-controls">
            <button type="button" id="addStudentBtn" class="add-btn" data-bs-toggle="modal"
                    data-bs-target="#addStudentModal">
                <i class="bi bi-person-plus-fill"></i>
                Add Student
            </button>
            <button type="button" id="addStaffBtn" class="add-btn hidden" data-bs-toggle="modal"
                    data-bs-target="#addStaffModal">
                <i class="bi bi-person-workspace"></i>
                Add Staff
            </button>

            <form id="searchForm" class="search-form" method="get" asp-controller="ManageUser" asp-action="Index">
                <input type="hidden" name="tab" id="searchTabInput" value="@Model.ActiveTab" />
                <input type="hidden" name="gender" value="@Model.GenderFilter" />
                <input type="hidden" name="roleFilter" value="@Model.RoleFilter" />
                <input type="hidden" name="sort" value="@Model.Sort" />
                <i class="bi bi-search search-icon" id="searchIcon"></i>
                <input type="search" name="search" value="@Model.Search" placeholder="Search users..."
                       class="search-input" id="searchInput" />
            </form>

            <button type="button" class="filter-btn" aria-label="Filter users" data-bs-toggle="modal"
                    data-bs-target="#filterUserModal">
                <i class="bi bi-filter" aria-hidden="true"></i>
                <span>Filter</span>
            </button>

            <a id="clearFilterBtn" class="clear-filter-btn"
                   href="@Url.Action("Index", "ManageUser", new { tab = Model.ActiveTab, search = Model.Search })">
                <i class="bi bi-eraser"></i>
                <span>Clear Filter</span>
            </a>
        </div>
    </section>

    <section id="student-table-section" class="table-container">
        <div class="table-responsive">
            <table class="table user-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>ID</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Gender</th>
                        <th>Role</th>
                        <th>Created By</th>
                        <th>Created Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Students.Count == 0)
                    {
                        <tr>
                            <td colspan="10" class="text-center py-4">No students found.</td>
                        </tr>
                    }
                    else
                    {
                        @for (var i = 0; i < Model.Students.Count; i++)
                        {
                            var student = Model.Students[i];
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@student.UserCode</td>
                                <td>@student.FullName</td>
                                <td>@student.Email</td>
                                <td>@student.PhoneNumber</td>
                                <td>@student.Gender</td>
                                <td>@student.Role</td>
                                <td>@student.CreatedBy</td>
                                <td>@(student.CreatedDate?.ToLocalTime().ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                                <td>
                                    <div class="action-container">
                                        <button type="button" class="edit-user-btn open-edit-student" data-bs-toggle="modal"
                                                data-bs-target="#editStudentModal" data-user-id="@student.UserId"
                                                data-user-code="@student.UserCode" data-full-name="@student.FullName"
                                                data-email="@student.Email" data-phone="@student.PhoneNumber"
                                                data-gender="@student.Gender" data-role="User">
                                            <i class="bi bi-pencil-square"></i>
                                        </button>

                                        <form method="post" asp-controller="ManageUser" asp-action="Delete"
                                              class="delete-user-form" data-user-name="@student.FullName">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="UserId" value="@student.UserId" />
                                            <input type="hidden" name="ReturnTab" value="students" class="return-tab-input" />
                                            <input type="hidden" name="Search" value="@Model.Search"
                                                   class="return-search-input" />
                                            <input type="hidden" name="FilterGender" value="@Model.GenderFilter"
                                                   class="return-gender-input" />
                                            <input type="hidden" name="RoleFilter" value="@Model.RoleFilter"
                                                   class="return-role-filter-input" />
                                            <input type="hidden" name="Sort" value="@Model.Sort" class="return-sort-input" />
                                            <button type="submit" class="delete-user-btn" aria-label="Delete @student.FullName">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div class="pagination-wrapper">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-end">
                        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">4</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </section>

