    <div class="modal fade" id="filterUserModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Filter Users</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="filterForm" method="get" asp-controller="ManageUser" asp-action="Index" class="row g-3">
                        <input type="hidden" name="tab" id="filterTabInput" value="@Model.ActiveTab" />

                        <div class="col-12">
                            <label class="form-label">Gender</label>
                            <div class="custom-select-wrapper">
                                <select class="form-select" name="gender">
                                    <option value="">All</option>
                                    <option value="male" selected="@(Model.GenderFilter == "male" ? "selected" : null)">
                                        Male</option>
                                        <option value="female"
                                                selected="@(Model.GenderFilter == "female" ? "selected" : null)">Female</option>
                                        <option value="unspecified"
                                                selected="@(Model.GenderFilter == "unspecified" ? "selected" : null)">
                                            Unspecified</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <label class="form-label">Role</label>
                                    <div class="custom-select-wrapper">
                                        <select class="form-select" name="roleFilter">
                                            <option value="">All</option>
                                            <option value="student"
                                                    selected="@(Model.RoleFilter == "student" ? "selected" : null)">Student</option>
                                            <option value="admin" selected="@(Model.RoleFilter == "admin" ? "selected" : null)">
                                                Admin</option>
                                                <option value="librarian"
                                                        selected="@(Model.RoleFilter == "librarian" ? "selected" : null)">Librarian
                                                </option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label">Sort</label>
                                        <div class="custom-select-wrapper">
                                            <select class="form-select" name="sort">
                                                <option value="name_asc" selected="@(Model.Sort == "name_asc" ? "selected" : null)">
                                                    Name (A-Z)</option>
                                                    <option value="name_desc"
                                                            selected="@(Model.Sort == "name_desc" ? "selected" : null)">Name (Z-A)</option>
                                                    <option value="id_asc" selected="@(Model.Sort == "id_asc" ? "selected" : null)">ID
                                                        (Low to High)</option>
                                                        <option value="id_desc" selected="@(Model.Sort == "id_desc" ? "selected" : null)">ID
                                                            (High to Low)</option>
                                                        </select>
                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <label class="form-label">Keyword</label>
                                                    <input class="form-control" type="text" name="search" value="@Model.Search"
                                                           placeholder="Name / Email / ID / Phone" />
                                                </div>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <a id="filterResetLink" class="btn btn-outline-secondary"
                                                   href="@Url.Action("Index", "ManageUser", new { tab = Model.ActiveTab, search = Model.Search })">Clear
                                                Filter</a>
                                                <button type="submit" form="filterForm" class="btn btn-success">Apply</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="modal fade" id="addStudentModal" tabindex="-1" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered modal-lg">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <i class="bi bi-plus-lg"></i>
                                                <h5 class="modal-title">Add Student</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <form id="formAddStudent" method="post" asp-controller="ManageUser" asp-action="Create">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="Role" value="User" />
                                                    <input type="hidden" name="ReturnTab" value="students" class="return-tab-input" />
                                                    <input type="hidden" name="Search" value="@Model.Search" class="return-search-input" />
                                                    <input type="hidden" name="FilterGender" value="@Model.GenderFilter"
                                                           class="return-gender-input" />
                                                    <input type="hidden" name="RoleFilter" value="@Model.RoleFilter"
                                                           class="return-role-filter-input" />
                                                    <input type="hidden" name="Sort" value="@Model.Sort" class="return-sort-input" />
                                                    <div class="row">
                                                        <div class="col-md-6 mb-3">
                                                            <label class="form-label">ID <span class="text-danger">*</span></label>
                                                            <input type="text" class="form-control" name="UserCode" placeholder="e.g. 0001234"
                                                                   required>
                                                        </div>
                                                        <div class="col-md-6 mb-3">
                                                            <label class="form-label">Full Name <span class="text-danger">*</span></label>
                                                            <input type="text" class="form-control" name="FullName" placeholder="Student Name"
                                                                   required>
                                                        </div>
                                                        <div class="col-md-6 mb-3">
                                                            <label class="form-label">Email <span class="text-danger">*</span></label>
                                                            <input type="email" class="form-control" name="Email" required>
                                                        </div>
                                                        <div class="col-md-6 mb-3">
                                                            <label class="form-label">Phone <span class="text-danger">*</span></label>
                                                            <input type="tel" class="form-control" name="PhoneNumber" required>
                                                        </div>
                                                        <div class="col-md-6 mb-3">
                                                            <label class="form-label">Gender <span class="text-danger">*</span></label>
                                                            <div class="custom-select-wrapper">
                                                                <select class="form-select" name="Gender" required>
                                                                    <option value="">Select Gender</option>
                                                                    <option value="M">Male</option>
                                                                    <option value="F">Female</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6 mb-3">
                                                            <label class="form-label">Password <span class="text-danger">*</span></label>
                                                            <input type="password" class="form-control" name="Password"
                                                                   placeholder="Min 6 characters" required>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                <button type="submit" form="formAddStudent" class="btn btn-success">Add Student</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="modal fade" id="addStaffModal" tabindex="-1" aria-hidden="true">
