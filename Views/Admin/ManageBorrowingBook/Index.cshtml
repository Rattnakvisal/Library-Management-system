@{
    ViewBag.Title = "Manage Borrowing Book";
}
@section Styles {
    <link rel="stylesheet" href="~/css/admin/ManageBorrowing.css" />
}

<div class="dashboard-page container-fluid">
    <header class="page-header">
        <h3>Borrowing Books</h3>
    </header>

    <div class="d-flex justify-content-between mt-3">
        <form action="" class="search-form" id="borrowing-search">
            <i class="bi bi-search search-icon" id="search-borrowing-icon"></i>
            <input type="text" placeholder="Search borrowing..." class="search-input" id="search-borrowing-input">
        </form>
        <div class="buttons-container d-flex justify-content-center align-items-center">
            <div class="filters" id="status-borrowing-filter">
                <button class="btn bg-white shadow dropdown-toggle" type="button" data-bs-toggle="dropdown"
                    aria-expanded="false">
                    <i class="bi bi-funnel-fill" style="font-size: 24px"></i>
                    <span style="font-size: 24px">Filter by status</span>
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">Active</a></li>
                    <li><a class="dropdown-item" href="#">Overdue</a></li>
                </ul>
            </div>
            <button type="button" class="new-borrowing-btn" id="new-borrowing-btn" data-bs-toggle="modal"
                data-bs-target="#addNewBorrowingModal">
                <i class="bi bi-plus-circle-fill"></i>
                <span>New Borrowing</span>
            </button>
        </div>
    </div>

    <!-- Add Borrowing Modal -->
    <div class="modal fade" id="addNewBorrowingModal" tabindex="-1" aria-labelledby="addNewBorrowingModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addNewBorrowingModalLabel">Add new borrowing</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="addNewBorrowingForm">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" for="usernameInput">Username <span
                                            class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="usernameInput" placeholder="eg.Me"
                                        required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" for="bookCodeSelect">Book Code <span
                                            class="text-danger">*</span></label>
                                    <div class="custom-select-wrapper">
                                        <select class="form-select" id="bookCodeSelect" required>
                                            <option value="">eg. 1010</option>
                                            <option value="1010">1010</option>
                                            <option value="1011">1011</option>
                                            <option value="1012">1012</option>
                                            <option value="1013">1013</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" for="bookTitleInput">Book Title <span
                                            class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="bookTitleInput" placeholder="eg. 10"
                                        required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" for="borrowingDateInput">Borrowing Date</label>
                                    <input type="date" class="form-control" id="borrowingDateInput"
                                        placeholder="eg. 978-3-16-148410-0">
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" id="confirmBorrowing">Confirm Borrowing</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Borrowing Modal -->
    <div class="modal fade" id="updateBorrowingModal" tabindex="-1" aria-labelledby="updateBorrowingModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="updateBorrowingModalLabel">Update borrowing</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="updateBorrowingForm">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" for="edit-borrowing-usernameInput">Username <span
                                            class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="edit-borrowing-usernameInput"
                                        placeholder="eg.Me" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" for="edit-borrowing-bookCodeSelect">Book Code <span
                                            class="text-danger">*</span></label>
                                    <div class="custom-select-wrapper">
                                        <select class="form-select" id="edit-borrowing-bookCodeSelect" required>
                                            <option value="">eg. 1010</option>
                                            <option value="1010">1010</option>
                                            <option value="1011">1011</option>
                                            <option value="1012">1012</option>
                                            <option value="1013">1013</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" for="edit-borrowing-bookTitleInput">Book Title <span
                                            class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="edit-borrowing-bookTitleInput"
                                        placeholder="eg. 10" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" for="edit-borrowing-borrowingDateInput">Borrowing
                                        Date</label>
                                    <input type="date" class="form-control" id="edit-borrowing-borrowingDateInput"
                                        placeholder="eg. 978-3-16-148410-0">
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" id="updateBorrowing">Update Borrowing</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Borrowing table -->
    <table class="table mt-3 borrowing-book-table">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Username</th>
                <th scope="col">Book Title</th>
                <th scope="col">Borrow Date</th>
                <th scope="col">Due Date</th>
                <th scope="col">Status</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>Ly</td>
                <td>Me: A Journey</td>
                <td>2026-01-01</td>
                <td>2026-01-08</td>
                <td>
                    <span class="table-status">Active</span>
                </td>
                <td>
                    <div class="action-container">
                        <button class="process-borrowing-btn">
                            <i class="bi bi-arrow-counterclockwise"></i>
                        </button>
                        <button class="edit-borrowing-btn" data-bs-toggle="modal"
                            data-bs-target="#updateBorrowingModal">
                            <i class="bi bi-pencil-square"></i>
                        </button>

                    </div>
                </td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td>Ly</td>
                <td>Me: A Journey</td>
                <td>2026-01-01</td>
                <td>2026-01-08</td>
                <td>
                    <span class="table-status">Overdue</span>
                </td>
                <td>
                    <div class="action-container">
                        <button class="process-borrowing-btn">
                            <i class="bi bi-arrow-counterclockwise"></i>
                        </button>
                        <button class="edit-borrowing-btn" data-bs-toggle="modal"
                            data-bs-target="#updateBorrowingModal">
                            <i class="bi bi-pencil-square"></i>
                        </button>

                    </div>
                </td>
            </tr>
        </tbody>
    </table>
    <nav aria-label="Borrowing pagination">
        <ul class="pagination justify-content-end">
            <li class="page-item disabled">
                <a class="page-link">Previous</a>
            </li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#">Next</a>
            </li>
        </ul>
    </nav>

    <!-- Reservation part -->
    <header class="page-header mt-5">
        <h3>Reservations</h3>
    </header>
    <div class="d-flex justify-content-between mt-3">
        <form action="" class="search-form" id="reservation-search">
            <i class="bi bi-search search-icon" id="search-reservation-icon"></i>
            <input type="text" placeholder="Search reservation..." class="search-input" id="search-reservation-input">
        </form>
        <div class="buttons-container d-flex justify-content-center align-items-center">
            <div class="filters" id="status-reservation-filter">
                <button class="btn bg-white shadow dropdown-toggle" type="button" data-bs-toggle="dropdown"
                    aria-expanded="false">
                    <i class="bi bi-funnel-fill" style="font-size: 24px"></i>
                    <span style="font-size: 24px">Filter by status</span>
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">Approved</a></li>
                    <li><a class="dropdown-item" href="#">Rejected</a></li>
                    <li><a class="dropdown-item" href="#">Pending</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Edit Reservation Modal -->
    <div class="modal fade" id="updateReservationModal" tabindex="-1" aria-labelledby="updateReservationModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="updateReservationModalLabel">Update Reservation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="updateReservationForm">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" for="edit-reservation-usernameInput">Username <span
                                            class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="edit-reservation-usernameInput"
                                        placeholder="eg.Me" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" for="edit-reservation-bookCodeSelect">Book Code <span
                                            class="text-danger">*</span></label>
                                    <div class="custom-select-wrapper">
                                        <select class="form-select" id="edit-reservation-bookCodeSelect" required>
                                            <option value="">eg. 1010</option>
                                            <option value="1010">1010</option>
                                            <option value="1011">1011</option>
                                            <option value="1012">1012</option>
                                            <option value="1013">1013</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" for="edit-reservation-bookTitleInput">Book Title <span
                                            class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="edit-reservation-bookTitleInput"
                                        placeholder="eg. 10" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" for="edit-reservation-reservationDateInput">Reservation
                                        Date</label>
                                    <input type="date" class="form-control" id="edit-reservation-reservationDateInput"
                                        placeholder="eg. 978-3-16-148410-0">
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" id="updateReservation">Update Reservation</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Reservation table -->
    <table class="table mt-3 reservation-book-table">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Username</th>
                <th scope="col">Book Title</th>
                <th scope="col">Reservation Date</th>
                <th scope="col">Status</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>Ly</td>
                <td>Me: A Journey</td>
                <td>2026-01-01</td>
                <td>
                    <span class="reservation-table-status">Approved</span>
                </td>
                <td>
                    <div class="action-container">
                        <button class="edit-reservation-btn" data-bs-toggle="modal"
                            data-bs-target="#updateReservationModal">
                            <i class="bi bi-pencil-square"></i>
                        </button>
                        <button class="approve-reservation-btn">
                            <i class="bi bi-check-lg text-success"></i>
                        </button>
                        <button class="reject-reservation-btn">
                            <i class="bi bi-x text-danger"></i>
                        </button>
                    </div>
                </td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td>Ly</td>
                <td>Me: A Journey</td>
                <td>2026-01-01</td>
                <td>
                    <span class="reservation-table-status">Rejected</span>
                </td>
                <td>
                    <div class="action-container">
                        <button class="edit-reservation-btn" data-bs-toggle="modal"
                            data-bs-target="#updateReservationModal">
                            <i class="bi bi-pencil-square"></i>
                        </button>
                        <button class="approve-reservation-btn">
                            <i class="bi bi-check-lg text-success"></i>
                        </button>
                        <button class="reject-reservation-btn">
                            <i class="bi bi-x text-danger"></i>
                        </button>
                    </div>
                </td>
            </tr>
            <tr>
                <th scope="row">3</th>
                <td>Ly</td>
                <td>Me: A Journey</td>
                <td>2026-01-01</td>
                <td>
                    <span class="reservation-table-status">Pending</span>
                </td>
                <td>
                    <div class="action-container">
                        <button class="edit-reservation-btn" data-bs-toggle="modal"
                            data-bs-target="#updateReservationModal">
                            <i class="bi bi-pencil-square"></i>
                        </button>
                        <button class="approve-reservation-btn">
                            <i class="bi bi-check-lg text-success"></i>
                        </button>
                        <button class="reject-reservation-btn">
                            <i class="bi bi-x text-danger"></i>
                        </button>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
    <nav aria-label="Reservation pagination">
        <ul class="pagination justify-content-end">
            <li class="page-item disabled">
                <a class="page-link">Previous</a>
            </li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#">Next</a>
            </li>
        </ul>
    </nav>
</div>
@section Scripts {
    <script src="~/js/admin/ManageBorrowing.js"></script>
}