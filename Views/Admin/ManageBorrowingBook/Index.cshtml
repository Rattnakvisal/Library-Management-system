@{
    ViewBag.Title = "Manage Borrowing Book";
}
@section Styles {
    <link rel="stylesheet" href="~/css/admin/ManageBorrowing.css" />
}
<header class="page-header">
    <h3>Borrowing Books</h3>
</header>

<div class="d-flex justify-content-between mt-3">
    <form action="" class="search-form" id="borrowing-search">
        <i class="bi bi-search search-icon" id="search-borrowing-icon"></i>
        <input type="text" placeholder="Search borrowing..." class="search-input" id="search-borrowing-input">

    </form>
    <div class="buttons-container d-flex justify-content-center align-items-center">
        <div class="filters" id="status-borrowing-filter">
            <button class="btn bg-white shadow dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-funnel-fill" style="font-size: 24px"></i>
                <span style="font-size: 24px">Filter by status</span>
            </button>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="#">Active</a>
                <a class="dropdown-item" href="#">Overdue</a>
            </div>
        </div>
        <button type="button" class="new-borrowing-btn" id="new-borrowing-btn" data-toggle="modal" data-target="#addNewBorrowingModal">
            <i class="bi bi-plus-circle-fill"></i>
            <span>New Borrowing</span>
        </button>
    </div>
</div>

<!-- Add Borrowing Modal -->
<div class="modal fade" id="addNewBorrowingModal" tabindex="-1" aria-labelledby="addNewBorrowingModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header d-flex justify-content-between">
                <h5 class="modal-title" id="exampleModalLabel">Add new borrowing</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="bookForm">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="required" for="usernameInput">Username <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="usernameInput" placeholder="eg.Me" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="required" for="bookCodeSelect">Book Code <span class="text-danger">*</span></label>
                                <div class="custom-select-wrapper">
                                    <select class="form-control" id="bookCodeSelect" required>
                                        <option value="">eg. 1010</option>
                                        <option value="1010">1010</option>
                                        <option value="1011">1011</option>
                                        <option value="1012">1012</option>
                                        <option value="1013">1013</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="required" for="bookTitleInput">Book Title <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="bookTitleInput" placeholder="eg. 10" required>
                            </div>
                        </div> 
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="required" for="borrowingDateInput">Borrowing Date</label>
                                <input type="date" class="form-control" id="borrowingDateInput" placeholder="eg. 978-3-16-148410-0">
                            </div>
                        </div> 
                    </div>
                
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="confirmBorrowing">Confirm Borrowing</button>
            </div>
        </div>
    </div>
</div>
<!-- Edit Borrowing Modal -->
