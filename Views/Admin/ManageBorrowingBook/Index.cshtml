@{
    ViewBag.Title = "Manage Borrowing Book";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin/ManageBorrowing.css" asp-append-version="true" />
}

<div class="dashboard-page container-fluid borrowing-page" id="manageBorrowingPage">
    <header class="page-header">
        <h1 class="page-title">Borrowing Management</h1>
        <p class="page-subtitle">Track borrowing records and reservation requests in one place.</p>
    </header>

    <section class="module-section">
        <div class="controls-section">
            <form action="" class="search-form" id="borrowing-search">
                <i class="bi bi-search search-icon" id="search-borrowing-icon"></i>
                <input type="text" placeholder="Search borrowing..." class="search-input" id="search-borrowing-input" />
            </form>

            <div class="action-controls">
                <div class="filters" id="status-borrowing-filter">
                    <button type="button" class="new-borrowing-btn" id="new-borrowing-btn" data-bs-toggle="modal"
                            data-bs-target="#addNewBorrowingModal">
                        <i class="bi bi-plus-circle-fill"></i>
                        <span>New Borrowing</span>
                    </button>
                    <button class="filter-btn dropdown-toggle" type="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                        <i class="bi bi-funnel-fill"></i>
                        <span>Filter by status</span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">All</a></li>
                        <li><a class="dropdown-item" href="#">Active</a></li>
                        <li><a class="dropdown-item" href="#">Overdue</a></li>
                    </ul>

                    <a id="clearFilterBtn" class="clear-filter-btn" href="#">
                        <i class="bi bi-eraser"></i>
                        <span>Clear Filter</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="table-container">
            <div class="table-responsive">
                <table class="table borrowing-book-table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Username</th>
                            <th scope="col">Book Title</th>
                            <th scope="col">Borrow Date</th>
                            <th scope="col">Due Date</th>
                            <th scope="col">Status</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>Ly</td>
                            <td>Me: A Journey</td>
                            <td>2026-01-01</td>
                            <td>2026-01-08</td>
                            <td><span class="table-status status-active">Active</span></td>
                            <td>
                                <div class="action-container">
                                    <button class="process-borrowing-btn" type="button" aria-label="Process return">
                                        <i class="bi bi-arrow-counterclockwise"></i>
                                    </button>
                                    <button class="edit-borrowing-btn" type="button" data-bs-toggle="modal"
                                            data-bs-target="#updateBorrowingModal" aria-label="Edit borrowing">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>Ly</td>
                            <td>Me: A Journey</td>
                            <td>2026-01-01</td>
                            <td>2026-01-08</td>
                            <td><span class="table-status status-overdue">Overdue</span></td>
                            <td>
                                <div class="action-container">
                                    <button class="process-borrowing-btn" type="button" aria-label="Process return">
                                        <i class="bi bi-arrow-counterclockwise"></i>
                                    </button>
                                    <button class="edit-borrowing-btn" type="button" data-bs-toggle="modal"
                                            data-bs-target="#updateBorrowingModal" aria-label="Edit borrowing">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="pagination-wrapper">
                <nav aria-label="Borrowing pagination">
                    <ul class="pagination justify-content-end">
                        <li class="page-item disabled"><a class="page-link">Previous</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </section>

    <section class="module-section">
        <div class="section-header">
            <h2 class="section-title">Reservations</h2>
        </div>

        <div class="controls-section">
            <form action="" class="search-form" id="reservation-search">
                <i class="bi bi-search search-icon" id="search-reservation-icon"></i>
                <input type="text" placeholder="Search reservation..." class="search-input"
                       id="search-reservation-input" />
            </form>

            <div class="action-controls">
                <div class="filters" id="status-reservation-filter">
                    <button class="filter-btn dropdown-toggle" type="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                        <i class="bi bi-funnel-fill"></i>
                        <span>Filter by status</span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">All</a></li>
                        <li><a class="dropdown-item" href="#">Approved</a></li>
                        <li><a class="dropdown-item" href="#">Rejected</a></li>
                        <li><a class="dropdown-item" href="#">Pending</a></li>
                    </ul>
                    <a id="clearFilterBtn" class="clear-filter-btn" href="#">
                        <i class="bi bi-eraser"></i>
                        <span>Clear Filter</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="table-container">
            <div class="table-responsive">
                <table class="table reservation-book-table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Username</th>
                            <th scope="col">Book Title</th>
                            <th scope="col">Reservation Date</th>
                            <th scope="col">Status</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>Ly</td>
                            <td>Me: A Journey</td>
                            <td>2026-01-01</td>
                            <td><span class="reservation-table-status reservation-approved">Approved</span></td>
                            <td>
                                <div class="action-container">
                                    <button class="edit-reservation-btn" type="button" data-bs-toggle="modal"
                                            data-bs-target="#updateReservationModal" aria-label="Edit reservation">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                    <button class="approve-reservation-btn" type="button"
                                            aria-label="Approve reservation">
                                        <i class="bi bi-check-lg"></i>
                                    </button>
                                    <button class="reject-reservation-btn" type="button"
                                            aria-label="Reject reservation">
                                        <i class="bi bi-x-lg"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>Ly</td>
                            <td>Me: A Journey</td>
                            <td>2026-01-01</td>
                            <td><span class="reservation-table-status reservation-rejected">Rejected</span></td>
                            <td>
                                <div class="action-container">
                                    <button class="edit-reservation-btn" type="button" data-bs-toggle="modal"
                                            data-bs-target="#updateReservationModal" aria-label="Edit reservation">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                    <button class="approve-reservation-btn" type="button"
                                            aria-label="Approve reservation">
                                        <i class="bi bi-check-lg"></i>
                                    </button>
                                    <button class="reject-reservation-btn" type="button"
                                            aria-label="Reject reservation">
                                        <i class="bi bi-x-lg"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">3</th>
                            <td>Ly</td>
                            <td>Me: A Journey</td>
                            <td>2026-01-01</td>
                            <td><span class="reservation-table-status reservation-pending">Pending</span></td>
                            <td>
                                <div class="action-container">
                                    <button class="edit-reservation-btn" type="button" data-bs-toggle="modal"
                                            data-bs-target="#updateReservationModal" aria-label="Edit reservation">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                    <button class="approve-reservation-btn" type="button"
                                            aria-label="Approve reservation">
                                        <i class="bi bi-check-lg"></i>
                                    </button>
                                    <button class="reject-reservation-btn" type="button"
                                            aria-label="Reject reservation">
                                        <i class="bi bi-x-lg"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="pagination-wrapper">
                <nav aria-label="Reservation pagination">
                    <ul class="pagination justify-content-end">
                        <li class="page-item disabled"><a class="page-link">Previous</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </section>

    <!-- Add Borrowing Modal -->
    <div class="modal fade" id="addNewBorrowingModal" tabindex="-1" aria-labelledby="addNewBorrowingModalLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addNewBorrowingModalLabel">Add New Borrowing</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="addNewBorrowingForm">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label" for="usernameInput">Username <span
                                    class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="usernameInput" placeholder="eg. Ly"
                                           required />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="bookCodeSelect">Book Code <span
                                        class="text-danger">*</span></label>
                                        <div class="custom-select-wrapper">
                                            <select class="form-select" id="bookCodeSelect" required>
                                                <option value="">eg. 1010</option>
                                                <option value="1010">1010</option>
                                                <option value="1011">1011</option>
                                                <option value="1012">1012</option>
                                                <option value="1013">1013</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label" for="bookTitleInput">Book Title <span
                                            class="text-danger">*</span></label>
                                            <input type="text" class="form-control" id="bookTitleInput"
                                                   placeholder="eg. Me: A Journey" required />
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label" for="borrowingDateInput">Borrowing Date</label>
                                            <input type="date" class="form-control" id="borrowingDateInput" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-success" id="confirmBorrowing">Confirm Borrowing</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Edit Borrowing Modal -->
                <div class="modal fade" id="updateBorrowingModal" tabindex="-1" aria-labelledby="updateBorrowingModalLabel"
                     aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="updateBorrowingModalLabel">Update Borrowing</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form id="updateBorrowingForm">
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <label class="form-label" for="edit-borrowing-usernameInput">Username <span
                                                class="text-danger">*</span></label>
                                                <input type="text" class="form-control" id="edit-borrowing-usernameInput"
                                                       placeholder="eg. Ly" required />
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label" for="edit-borrowing-bookCodeSelect">Book Code <span
                                                    class="text-danger">*</span></label>
                                                    <div class="custom-select-wrapper">
                                                        <select class="form-select" id="edit-borrowing-bookCodeSelect" required>
                                                            <option value="">eg. 1010</option>
                                                            <option value="1010">1010</option>
                                                            <option value="1011">1011</option>
                                                            <option value="1012">1012</option>
                                                            <option value="1013">1013</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <label class="form-label" for="edit-borrowing-bookTitleInput">Book Title <span
                                                        class="text-danger">*</span></label>
                                                        <input type="text" class="form-control" id="edit-borrowing-bookTitleInput"
                                                               placeholder="eg. Me: A Journey" required />
                                                    </div>
                                                    <div class="col-md-6">
                                                        <label class="form-label" for="edit-borrowing-borrowingDateInput">Borrowing Date</label>
                                                        <input type="date" class="form-control" id="edit-borrowing-borrowingDateInput" />
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="button" class="btn btn-success" id="updateBorrowing">Update Borrowing</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Edit Reservation Modal -->
                            <div class="modal fade" id="updateReservationModal" tabindex="-1" aria-labelledby="updateReservationModalLabel"
                                 aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="updateReservationModalLabel">Update Reservation</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form id="updateReservationForm">
                                                <div class="row g-3">
                                                    <div class="col-md-6">
                                                        <label class="form-label" for="edit-reservation-usernameInput">Username <span
                                                            class="text-danger">*</span></label>
                                                            <input type="text" class="form-control" id="edit-reservation-usernameInput"
                                                                   placeholder="eg. Ly" required />
                                                        </div>
                                                        <div class="col-md-6">
                                                            <label class="form-label" for="edit-reservation-bookCodeSelect">Book Code <span
                                                                class="text-danger">*</span></label>
                                                                <div class="custom-select-wrapper">
                                                                    <select class="form-select" id="edit-reservation-bookCodeSelect" required>
                                                                        <option value="">eg. 1010</option>
                                                                        <option value="1010">1010</option>
                                                                        <option value="1011">1011</option>
                                                                        <option value="1012">1012</option>
                                                                        <option value="1013">1013</option>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <label class="form-label" for="edit-reservation-bookTitleInput">Book Title <span
                                                                    class="text-danger">*</span></label>
                                                                    <input type="text" class="form-control" id="edit-reservation-bookTitleInput"
                                                                           placeholder="eg. Me: A Journey" required />
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <label class="form-label" for="edit-reservation-reservationDateInput">Reservation
                                                                        Date</label>
                                                                        <input type="date" class="form-control" id="edit-reservation-reservationDateInput" />
                                                                    </div>
                                                                </div>
                                                            </form>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                            <button type="button" class="btn btn-success" id="updateReservation">Update Reservation</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        @section Scripts {
                                            <script src="~/js/admin/ManageBorrowing.js" asp-append-version="true"></script>
                                        }