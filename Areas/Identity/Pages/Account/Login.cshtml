@page
@model LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ACLEDA University Library</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Your custom css -->
    <link rel="stylesheet" href="~/css/Login/login.css" asp-append-version="true" />
</head>

<body>
    <div class="container">
        <div class="card">

            <!-- Left Section -->
            <div class="left">
                <div class="logo">
                    <img src="~/images/Login/logo.png" alt="ACLEDA Logo" />
                </div>

                <div class="illustration">
                    <img src="~/images/Login/bookicon.png" alt="Books Illustration" />
                </div>
            </div>

            <!-- Right Section -->
            <div class="right">
                <h2>ACLEDA UNIVERSITY LIBRARY</h2>

                <div class="btn-login-student">
                    <img class="logoac" src="~/images/Login/logoac.png" alt="Student Icon" />
                    Everyone loves reading books.
                </div>

                <div class="divider">
                    <span>OR</span>
                </div>

                <!-- Identity Login Form -->
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div>
                        <div class="input-group">
                            <div class="icon-email">
                                <i class="fa-regular fa-envelope"></i>
                            </div>

                            <input asp-for="Input.Email" type="email" placeholder="Your Email" autocomplete="username"
                                   aria-required="true" required />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>

                        <div class="input-group">
                            <div class="icon-password">
                                <i class="fa-solid fa-lock"></i>
                            </div>

                            <input asp-for="Input.Password" type="password" class="password" placeholder="Your Password"
                                   autocomplete="current-password" aria-required="true" required />

                            <span class="toggle-password" role="button" tabindex="0">
                                <i class="bi bi-eye-slash" id="togglePassword"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>

                    </div>

                    <button id="login-submit" type="submit" class="btn-signin">
                        Sign in
                    </button>
                </form>

                <div class="links">
                    <div class="forgot">
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                    </div>

                    <p>
                        Don’t have an account?
                        <a class="Sign-up-telegram" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                            Sign up
                        </a>
                    </p>


                </div>

                <!-- External Login (Optional) -->
                @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                {
                    <div style="margin-top:18px;">
                        <div class="divider"><span>OR</span></div>

                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl"
                              method="post">
                            <div style="display:flex; gap:10px; flex-wrap:wrap;">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn-signin" name="provider" value="@provider.Name"
                                            title="Log in using your @provider.DisplayName account"
                                            style="width:auto; padding:10px 16px;">
                                        @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    </div>
                }
            </div>

        </div>
    </div>

    <script src="~/js/admin/login.js"></script>
    <script src="~/js/script.js" asp-append-version="true"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }


</body>

</html>